        <!-- ./STORE SPECIALS -->
        <!-- Auction Banner -->
        <div class="auction-category-item-special auction-list-special">
            {% if auction.tense == 'future' %}
                <h1 class="auction-special-tag auction-list-special-tag">{{ trans("CeresSchaffrath::Template.auctionFuture") }}</h1>
            {% elseif auction.tense == 'present' %}
                <h1 class="auction-special-tag auction-list-special-tag">{{ trans("CeresSchaffrath::Template.auctionPresent") }}</h1>
            {% else %}
                <h1 class="auction-special-tag auction-list-special-tag">{{ trans("CeresSchaffrath::Template.auctionPast") }}</h1>
            {% endif %}
        </div>
        <!-- ./Auction Banner -->
        
        <!-- ITEM DETAILS CeresSchaffrath -->
        
        {#Auktion ########################################### #}
        
        <div class="col-xs-6 col-sm-8 auction-list-content">
            <div class="col-sm-6 cat-item-titel-ao">
                
                <p class="thumb-title auction-thumb-title"><a href="{{ itemUrl }}">{{ item.data.texts | itemName(1) }}</a></p>
                
                <p class="thumb-title auction-thumb-title-small">{{ item.data.texts | itemName(2) }}</p>
            
            </div>
            
            <div class="col-sm-6 thumb-meta">
                <div class="prices">
                    {% if auction.tense == 'future' %}
                        <h5 class="price-info-ao">{{ trans("PluginAuctions::Template.startPrice") }}
                            <span class="m-l-1"><i class="fa fa-pencil-square-o fa-2x text-warning"
                                        aria-hidden="true"></i></span></h5>
                        <span class="price auction-list-price">
                                {{ auction.startPrice | formatMonetary('EUR') }} <sup>*</sup>
                            </span>
                    {% elseif auction.tense == 'present' %}
                        <span class="price-info-ao">
                            <h5>{{ trans("CeresSchaffrath::Template.highestBid") }}
                                <span class="m-l-1"><i class="fa fa-gavel fa-2x text-danger"
                                            aria-hidden="true"></i></span></h5>
                           </span>
                        <span class="price auction-list-price">
                                {% if bidderListLength > 1 %}
                                    {{ bidderListLast.bidPrice | formatMonetary('EUR') }} <sup>*</sup>
                                {% else %}
                                    {{ auction.startPrice | formatMonetary('EUR') }} <sup>*</sup>
                                {% endif %}
                            </span>
                    {% else %}
                        <span class="price-info-ao">
                            <h5>{{ trans("CeresSchaffrath::Template.closedPrice") }}
                                <span class="m-l-1"><i class="fa fa-lock fa-2x"
                                            aria-hidden="true"></i></span></h5>
                           </span>
                        <span class="price auction-list-price">
                                {{ bidderListLast.bidPrice | formatMonetary('EUR') }} <sup>*</sup>
                            </span>
                    {% endif %}
                </div>
                
                <span class="vat-porto-info small text-muted text-right auction-list-porto">
                    <sup>*</sup> {{ trans("Ceres::Template.itemExclusive") }} {{ trans("CeresSchaffrath::Template.surcharge") }}
                    | {{ trans("Ceres::Template.itemInclVAT") }}
                </span>
            </div>
        
        </div>
